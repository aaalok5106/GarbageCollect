<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="com.mridul.garbagecollect.LoginActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_email_design"
        android:layout_width="match_parent"
        android:layout_marginTop="98dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="User Name"
            android:id="@+id/login_userName" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_password_design"
        android:layout_width="match_parent"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/login_email_design"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_alignParentStart="true"
            android:hint="Password"
            android:id="@+id/login_password" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="Sign In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password_design"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:id="@+id/login_signin"
        />


    <Button
        android:text="forgot password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_forgotPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:onClick="forgotPasswordLayout"
        />


</RelativeLayout>
